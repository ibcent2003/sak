@model Project.Areas.Setup.Models.TruckViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Edit Truck";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Edit Truck</li>
        </ul>
    </div>
}

<style>
    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>


<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Edit Truck

                </h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("EditTruck", "Truck", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal row-border" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Truckform.Id)

                    <div class="form-group">
                        @Html.Label("Name", new { @class = "col-md-2 control-label required" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Truckform.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Truckform.Name, null, new { @style = "color:red" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Number", new { @class = "col-md-2 control-label required" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Truckform.Number, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Truckform.Number, null, new { @style = "color:red" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Exisiting Photo", new { @class = "col-md-2 control-label required" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(x => x.Truckform.Photo, new { type = "file" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Passport Photo", new { @class = "col-md-2 control-label required" })
                        <div class="col-md-6">
                            <img src="@Url.Action("DocumentsUploadedPath", new { Path=(Model.FullPhotoPath) + Model.UploadedPhoto})" height="50" width="50" style="border:solid" />
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Is Deleted?", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.CheckBoxFor(m => m.Truckform.IsDeleted)
                        </div>
                    </div>


                    <div class="form-actions">
                        <a href="@Url.Action("Index", "Truck", new { area="Setup"})" class="btn btn-success btn-xs"><< Back to List </a>
                        <input type="submit" class="btn btn-warning btn-xs pull-right" value="Save" />
                    </div>
                }
            </div>

        </div>
    </div>
</div>